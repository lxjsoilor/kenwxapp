.page-con .null {
    text-align: center;
}

.page-con .null .icon-font {
    font-size: 134rpx;
    color: #7E7D7E;
    padding-top: 270rpx;
}

.page-con .null .title {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #7E7D7E;
    letter-spacing: 0;
    text-align: center;
    line-height: 40rpx;
    margin-top: 34rpx;
}

.page-con .null .guang_btn {
    width: 280rpx;
    margin: 72rpx auto;
}

.page-con scroll-view {
    height: calc(100% - 232rpx);
}

.page-con scroll-view .product-li {
    border-top: 1px solid #F2F2F2;
    width: 100%;
    padding: 40rpx 0;
    position: relative;
}

.page-con scroll-view .product-li.del {
    animation: right-left 0.4s linear;
}

.page-con scroll-view .product-li .checkBox {
    position: absolute;
    top: 50%;
    left: 10rpx;
    transform: translateY(-50%);
}

.page-con scroll-view .product-li .checkBox .icon-font {
    font-size: 40rpx;
    padding: 10rpx;
}

.page-con scroll-view .product-li .checkBox .icon-font.icon-checkbox_default {
    color: #C3C3C3;
}

.page-con scroll-view .product-li .checkBox .icon-font.icon-checkbox_selected {
    color: #092DC5;
}

.page-con scroll-view .product-li .product-img {
    width: 260rpx;
    height: 260rpx;
    background-color: #E8E8E8;
    position: absolute;
    top: 40rpx;
    left: 84rpx;
}

.page-con scroll-view .product-li .product-img .img {
    width: 100%;
    height: 100%;
}

.page-con scroll-view .product-li .product-info {
    margin-left: 344rpx;
    min-height: 260rpx;
    padding: 0 78rpx 0 20rpx;
    position: relative;
}

.page-con scroll-view .product-li .product-info .title {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #3E3D3E;
    letter-spacing: 0;
    line-height: 40rpx;
}

.page-con scroll-view .product-li .product-info .attr {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #A4A3A4;
    letter-spacing: 0;
    line-height: 34rpx;
    margin-top: 8rpx;
}

.page-con scroll-view .product-li .product-info .price {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #3E3D3E;
    letter-spacing: 0;
    line-height: 40rpx;
    margin-top: 8rpx;
}

.page-con scroll-view .product-li .product-info .num {
    position: absolute;
    left: 20rpx;
    bottom: 0;
    width: 176rpx;
    height: 48rpx;
}

.page-con scroll-view .product-li .shadow {
    width: 100%;
    height: 100%;
    background: #FAFAFA;
    opacity: 0.6;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 19;
}

.page-con scroll-view .product-li .del {
    position: absolute;
    right: 10rpx;
    top: 48rpx;
    z-index: 29;
}

.page-con scroll-view .product-li .del .icon-x {
    font-size: 24rpx;
    padding: 10rpx;
}

.page-con scroll-view .product-li .toast {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #FF0000;
    letter-spacing: 0;
    text-align: right;
    line-height: 34rpx;
    position: absolute;
    bottom: 46rpx;
    right: 20rpx;
}

.page-con scroll-view .product-li .toast .advance {
    color: #092DC5;
}

.page-con scroll-view .pro-freebie {
    padding: 0 0 36rpx 84rpx;
}

.page-con scroll-view .pro-freebie .tag {
    height: 30rpx;
    line-height: 26rpx;
    font-size: 20rpx;
    border-radius: 3px;
    color: #092DC5;
    padding: 0 6rpx;
    border: 2rpx solid #092dc5;
    box-sizing: border-box;
    align-items: center;
    margin-right: 6rpx;
}

.page-con scroll-view .pro-freebie .txt {
    font-size: 24rpx;
    font-family: PingFangSC-Regular,PingFangSC;
    font-weight: 400;
    color: #A4A3A4;
}

.page-con .freebie-item {
    display: flex;
    padding: 40rpx 30rpx;
    justify-content: space-between;
    border-top: 2rpx solid #F2F2F2;
}

.page-con .freebie-item .left {
    display: flex;
}

.page-con .freebie-item .img {
    width: 100rpx;
    height: 100rpx;
    display: block;
    background-color: #E8E8E8;
}

.page-con .freebie-item .img image {
    width: 100rpx;
    height: 100rpx;
}

.page-con .freebie-item .freebie {
    display: flex;
}

.page-con .freebie-item .freebie .tag {
    height: 30rpx;
    line-height: 26rpx;
    font-size: 20rpx;
    border-radius: 3px;
    color: #092DC5;
    padding: 0 6rpx;
    border: 2rpx solid #092dc5;
    box-sizing: border-box;
    align-items: center;
    margin-right: 6rpx;
}

.page-con .freebie-item .freebie .txt {
    font-size: 24rpx;
    font-family: PingFangSC-Regular,PingFangSC;
    font-weight: 400;
    color: #3e3d3e;
    margin-top: -2rpx;
    padding-left: 20rpx;
    width: 440rpx;
    line-height: 40rpx;
}

.page-con .freebie-item .num {
    font-size: 24rpx;
    font-family: PingFangSC-Regular,PingFangSC;
    font-weight: 400;
    color: #3e3d3e;
}

.page-con .foot {
    width: 100%;
    height: 116rpx;
    background-color: #fff;
    border-top: 2rpx solid #F2F2F2;
    border-bottom: 2rpx solid #F2F2F2;
    padding: 22rpx 24rpx 22rpx 20rpx;
    position: absolute;
    left: -10rpx;
    bottom: 116rpx;
    z-index: 39;
}

.page-con .foot .checkBox .icon-font {
    font-size: 40rpx;
    padding: 10rpx;
}

.page-con .foot .checkBox .icon-font.icon-checkbox_default {
    color: #C3C3C3;
}

.page-con .foot .checkBox .icon-font.icon-checkbox_selected {
    color: #092DC5;
}

.page-con .foot .checkBox .text {
    margin-left: 12rpx;
}

.page-con .foot .clearing .amount {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #3E3D3E;
    letter-spacing: 0;
    text-align: right;
    line-height: 40rpx;
    margin-right: 28rpx;
}

.page-con .foot .clearing .amount .num {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #000000;
    letter-spacing: 0;
    text-align: right;
    line-height: 34rpx;
}

.page-con .foot .clearing .btn {
    width: 280rpx;
    height: 72rpx;
}

.page-con.isIPX scrollview {
    height: calc(100% - 272rpx);
}

.page-con.isIPX .foot {
    bottom: 156rpx;
}

.modal-con {
    padding: 80rpx 0;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #3E3D3E;
    letter-spacing: 0;
    text-align: center;
    line-height: 44rpx;
}

@-webkit-keyframes right-left {
    0% {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-100vw);
    }
}

@keyframes right-left {
    0% {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-100vw);
    }
}