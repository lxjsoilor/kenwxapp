@import "../../__wuBaseWxss__/1.wxss";

page {
    background: #e8e8e8;
}

.wrap {
    position: relative;
    border-top: 1px solid transparent;
    padding-bottom: 116rpx;
}

.wrap.isIPX {
    padding-bottom: 156rpx;
}

.getgift-bg {
    position: absolute;
    z-index: 80;
    height: 350rpx;
}

.getgift-bg-re {
    position: absolute;
    z-index: 110;
    right: 0;
    top: 176rpx;
    width: 60rpx;
    height: 240rpx;
}

.gift-bg {
    position: absolute;
    z-index: 100;
    top: 34rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 235rpx;
    height: 235rpx;
}

.gift-bg .gift {
    width: 100%;
    height: 100%;
}

.gift-bg .gift-shadow {
    width: 235rpx;
    height: 22rpx;
}

.content {
    position: relative;
    z-index: 90;
    margin-top: 160rpx;
    padding: 0 20rpx;
}

.content .box {
    padding-top: 156rpx;
    background: #fff;
}

.content .box .pro-freebie {
    display: flex;
    padding-top: 14rpx;
    text-align: center;
}

.content .box .pro-freebie .tag {
    height: 24rpx;
    line-height: 20rpx;
    font-size: 16rpx;
    border-radius: 3px;
    color: #092DC5;
    padding: 0 6rpx;
    border: 2rpx solid #092dc5;
    box-sizing: border-box;
    align-items: center;
    margin-right: 6rpx;
}

.content .box .pro-freebie .txt {
    font-size: 22rpx;
    font-family: PingFangSC-Regular,PingFangSC;
    font-weight: 400;
    color: #3e3d3e;
    line-height: 40rpx;
    text-align: center;
    margin: 0 auto;
    position: relative;
    padding: 20rpx;
}

.content .box .pro-freebie .txt::after {
    content: '';
    position: absolute;
    width: 400rpx;
    left: 50%;
    top: 0;
    margin-left: -200rpx;
    box-sizing: border-box;
    height: 2rpx;
    background: #F2F2F2;
}

.content .desc-box {
    text-align: center;
    font-family: PublicoBanner-Light;
    font-size: 12px;
    color: #3E3D3E;
    letter-spacing: 1px;
    text-align: center;
}

.content .desc-box .title {
    line-height: 34rpx;
    margin-bottom: 8rpx;
}

.content .desc-box .num {
    margin-left: 58rpx;
}

.content .desc-box .desc,.content .desc-box .num {
    display: inline-block;
    height: 34rpx;
    line-height: 34rpx;
}

.content .form-desc {
    height: 40rpx;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    margin: 74rpx 50rpx 28rpx;
    font-family: PingFangSC-Regular;
}

.content .form-desc .desc {
    line-height: 40rpx;
    font-size: 14px;
    color: #3E3D3E;
}

.content .form-desc .local {
    line-height: 34rpx;
    margin-left: 12rpx;
    font-size: 12px;
    color: #3E3D3E;
}

.content .form-desc .icon-wechat {
    line-height: 34rpx;
    font-size: 34rpx;
    vertical-align: middle;
}

.content .form {
    padding: 0 40rpx 72rpx;
}

.content .form .input-group+.input-group {
    margin-top: 20rpx;
}

.content .form .form_button {
    background-color: transparent;
    padding: 0;
    margin: 0;
    text-align: left;
}

.content .form .input,.content .form .textarea {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #3E3D3E;
    letter-spacing: 0;
    border: 1px solid #DDDDDD;
    border-radius: 2px;
    box-sizing: border-box;
}

.content .form .input {
    height: 96rpx;
    line-height: 96rpx;
    padding: 0 40rpx;
}

.content .form .picker-input {
    border: none;
    padding: 0;
}

.content .form .textarea {
    width: auto;
    height: 136rpx;
    line-height: 40rpx;
    padding: 28rpx 40rpx;
}

.content .form .picker {
    display: flex;
    justify-content: space-between;
}

.content .form .picker .picker-txt {
    justify-content: center;
    height: auto;
    line-height: 1.2;
}

.content .form .picker .icon-arrow_down {
    font-size: 12rpx;
    color: #504F4F;
}

.content .form .input-placeholder,.content .form .textarea-placeholder {
    color: #C3C3C3;
}

.content .form .advance-tips {
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #092DC5;
}

.content .form .advance-tips .tips-txt {
    margin-top: 20rpx;
    line-height: 34rpx;
}

.btn-box {
    width: 100%;
    padding: 18rpx 20rpx;
}

.btn-box.isIPX {
    bottom: 40rpx;
}

.btn-box .btn {
    height: 80rpx;
    line-height: 80rpx;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #FFFFFF;
    letter-spacing: 1px;
    text-align: center;
}

.btn-box .btn-green {
    background: #092DC5;
    border-radius: 3px;
}

.btn-box .btn-ccc {
    background: #A4A3A4;
    border-radius: 3px;
}